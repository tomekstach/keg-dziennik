{{< core/modal }}
    {{$title}}{{#str}} Add {{/str}}{{/title}}
    {{$body}}
        <div class="container">
            <span class="notifications" id="user-notifications" style="display: none;"><div class="alert alert-danger alert-block fade in " role="alert" data-aria-autofocus="true">
              Error message
          </div></span>
            <form>
                <div class="form-group row">
                    <label for="inputGroup" class="col-sm-2 col-form-label">{{#str}} name {{/str}}</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="groupname" id="inputGroup">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputCourse" class="col-sm-2 col-form-label">{{#str}} course {{/str}}</label>
                    <div class="col-sm-10">
                        <select class="form-control" name="course" id="inputCourse">
                            <option value=""></option>
                        </select>
                    </div>
                </div>
            </form>
        </div>
    {{/body}}
    {{$footer}}
        <button type="button" class="btn btn-primary" data-action="save">{{#str}} save {{/str}}</button>
        <button type="button" class="btn btn-secondary" data-action="cancel">{{#str}} cancel {{/str}}</button>
    {{/footer}}
